<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sebastian.lostfoundapp.View_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="found Items"
            android:onClick="image"
            android:textColorLink="#fa0303"
            android:textColor="#faf5f5"
            android:background="#193135"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColorHint="#fa0303"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:id="@+id/buttonGetImage" />

        <Button
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="Lost Items"
            android:textColorLink="#fa0303"
            android:textColor="#faf5f5"
            android:background="#193135"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:id="@+id/buttonlostitem" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>


