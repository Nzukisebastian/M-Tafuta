<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sebastian.lostfoundapp.Main4Activity"
    android:id="@+id/main_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:text="@string/found_Items"
            android:onClick="image"
            android:textColorLink="#070707"
            android:textColor="#faf5f5"
            android:background="#3F51B5"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColorHint="#fa0303"
            android:textSize="20dp"
            android:id="@+id/buttonGetImage"
            android:singleLine="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:text="Lost Items"
            android:onClick="info"
            android:id="@+id/button"
            android:textColorLink="#fa0303"
            android:textColor="#faf5f5"
            android:background="#3F51B5"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/scrollView">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/fetchdata"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</ScrollView>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_pirates"
        android:layout_marginRight="105dp"
        android:layout_marginEnd="80dp"
        android:onClick="onRadioButtonClicked"
        android:layout_marginTop="70dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

