<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sebastian.lostfoundapp.Main4Activity"
    android:id="@+id/main_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/found_Items"
            android:onClick="image"
            android:textColorLink="#070707"
            android:textColor="#faf5f5"
            android:background="#193135"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColorHint="#fa0303"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:id="@+id/buttonGetImage"
            android:singleLine="true" />

        <Button
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Lost Items"
            android:onClick="info"
            android:id="@+id/button"
            android:textColorLink="#fa0303"
            android:textColor="#faf5f5"
            android:background="#193135"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/scrollView">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="display"
        android:id="@+id/fetchdata"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />
    </ScrollView>

</RelativeLayout>

